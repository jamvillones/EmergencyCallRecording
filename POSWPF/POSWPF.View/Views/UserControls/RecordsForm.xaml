<UserControl x:Class="ECR.View.Views.UserControls.RecordsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ECR.View.Views.UserControls"
             xmlns:ph="clr-namespace:PlaceholderTextBox;assembly=PlaceholderTextBox"
             xmlns:vm="clr-namespace:ECR.View.ViewModels"
             mc:Ignorable="d"
             FocusManager.FocusedElement="{Binding ElementName=firstControl}"
             d:DataContext="{d:DesignInstance Type=vm:AddRecordForm_ViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="784.5"
             d:DesignWidth="1080">
    <UserControl.Resources>
        <Thickness x:Key="Vertical.Spacing">0,0,0,20</Thickness>

        <Style TargetType="Button">
            <Setter Property="Template"
                    Value="{StaticResource Template.Round.Button}" />
            <Setter Property="Width"
                    Value="140" />
            <Setter Property="Height"
                    Value="35" />
            <Setter Property="Margin"
                    Value="0,0,10,0" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>
    </UserControl.Resources>

    <Grid Background="#cfffffff">

        <Grid Margin="40"
              MaxWidth="600">
            <Border Background="#EFF2F7"
                    BorderThickness="0.5"
                    BorderBrush="Black"
                    CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="0"
                                      Opacity="0.4" />
                </Border.Effect>
            </Border>

            <Grid Margin="25,20,2,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="AUTO" />
                    <RowDefinition />
                    <RowDefinition Height="AUTO" />
                </Grid.RowDefinitions>

                <TextBlock VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold">ADD NEW RECORD</TextBlock>

                <StackPanel Grid.Row="1"
                            Margin="0,10"
                            Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="RadioButton">
                            <Setter Property="Margin"
                                    Value="0,0,0,0" />
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Center" />
                            <Setter Property="Padding"
                                    Value="15,5" />
                            <Setter Property="Width"
                                    Value="100" />
                            <Setter Property="Cursor"
                                    Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="templateRoot">
                                            <Grid>
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  Margin="{TemplateBinding Padding}" />
                                                <Border x:Name="checkIndicator"
                                                        VerticalAlignment="Bottom"
                                                        Height="1"
                                                        Visibility="Hidden"
                                                        Background="{StaticResource AccentColor.Primary}" />
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked"
                                                     Value="True">
                                                <Setter Property="Visibility"
                                                        TargetName="checkIndicator"
                                                        Value="Visible" />
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource AccentColor.Primary}" />
                                                <Setter Property="FontWeight"
                                                        Value="Bold" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>
                    <RadioButton x:Name="detailsRB"
                                 IsChecked="True">Details</RadioButton>
                    <RadioButton x:Name="audioRB">Audio Clips</RadioButton>
                </StackPanel>

                <ScrollViewer Grid.Row="2"
                              Margin="0,10"
                              Padding="0,0,5,0"
                              VerticalScrollBarVisibility="Visible"
                              HorizontalScrollBarVisibility="Disabled">

                    <StackPanel Visibility="{Binding ElementName=detailsRB, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin"
                                        Value="5,0,5,5" />
                                <Setter Property="FontSize"
                                        Value="11" />

                                <Setter Property="Foreground"
                                        Value="{StaticResource AccentColor.Primary}" />
                            </Style>
                        </StackPanel.Resources>

                        <TextBlock>Caller Information:</TextBlock>

                        <StackPanel Margin="{StaticResource Vertical.Spacing}">
                            <ph:PlaceholderTextbox x:Name="firstControl"
                                                   Text="{Binding CallerName, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                                                   PlaceholderText="Name..."></ph:PlaceholderTextbox>
                            <ph:PlaceholderTextbox Text="{Binding CallContactDetails, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   PlaceholderText="Contact Details..."></ph:PlaceholderTextbox>
                            <ph:PlaceholderTextbox Margin="0"
                                                   Text="{Binding CallAddresss, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   PlaceholderText="Address(optional)..."></ph:PlaceholderTextbox>
                        </StackPanel>

                        <TextBlock>Call Type:</TextBlock>
                        <ComboBox Margin="{StaticResource Vertical.Spacing}"
                                  Text="{Binding EndorseTo,UpdateSourceTrigger=PropertyChanged}"
                                  Background="White"
                                  IsEditable="True">
                            <ComboBoxItem>Emergency</ComboBoxItem>
                            <ComboBoxItem>Prank</ComboBoxItem>
                            <ComboBoxItem>Wrong Number</ComboBoxItem>
                        </ComboBox>

                        <TextBlock>Endorse To:</TextBlock>

                        <ComboBox Margin="{StaticResource Vertical.Spacing}"
                                  Text="{Binding EndorseTo,UpdateSourceTrigger=PropertyChanged}"
                                  Background="White"
                                  IsEditable="True">
                            <ComboBoxItem>BFP Kalibo FireStation</ComboBoxItem>
                            <ComboBoxItem>BFP Kalibo FireStation I</ComboBoxItem>
                            <ComboBoxItem>BFP Kalibo FireStation II</ComboBoxItem>
                            <ComboBoxItem>BFP Kalibo FireStation III</ComboBoxItem>
                            <ComboBoxItem>BFP Kalibo FireStation IV</ComboBoxItem>
                        </ComboBox>
                        <Grid Margin="{StaticResource Vertical.Spacing}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0">Location:</TextBlock>
                            <ph:PlaceholderTextbox Grid.Row="1"
                                                   Grid.Column="0"
                                                   Margin="0"
                                                   Text="{Binding Severity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Grid.Column="2">Priority Level:</TextBlock>

                            <Border Grid.Row="1"
                                    Grid.Column="2"
                                    BorderBrush="{StaticResource AccentColor.Primary}"
                                    Background="White"
                                    VerticalAlignment="Top"
                                    CornerRadius="3,3,0,0"
                                    Padding="10.5"
                                    BorderThickness="0,0,0,1">

                                <UniformGrid Columns="6"
                                             VerticalAlignment="Center">
                                    <UniformGrid.Resources>
                                        <Style TargetType="RadioButton">
                                            <Setter Property="HorizontalAlignment"
                                                    Value="Center" />

                                            <Setter Property="Cursor"
                                                    Value="Hand" />
                                        </Style>

                                    </UniformGrid.Resources>
                                    <RadioButton IsChecked="True">I</RadioButton>
                                    <RadioButton>II</RadioButton>
                                    <RadioButton>III</RadioButton>
                                    <RadioButton>IV</RadioButton>
                                    <RadioButton>V</RadioButton>
                                    <RadioButton Margin="0">VI</RadioButton>

                                </UniformGrid>
                            </Border>
                        </Grid>

                        <TextBlock>Summary:</TextBlock>
                        <ph:PlaceholderTextbox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                               Margin="{StaticResource Vertical.Spacing}" />

                        <TextBlock>Details of the Report:</TextBlock>
                        <ph:PlaceholderTextbox AcceptsReturn="True"
                                               TextWrapping="Wrap"
                                               MinHeight="270"
                                               Margin="0"
                                               BorderBrush="{StaticResource AccentColor.Primary}"
                                               Text="{Binding Details,UpdateSourceTrigger=PropertyChanged}" />

                    </StackPanel>
                </ScrollViewer>
                <!--<Border Background="#E0EAFA"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="10"
                        Margin="0,10,20,10"
                        Grid.Row="2">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="{StaticResource AccentColor.Primary}"
                                   VerticalAlignment="Center">*No Recording Selected</TextBlock>

                        <Button Margin="0"
                                Background="Transparent"
                                Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Image Source="/Images/Audio Wave_50px.png"
                                       Width="15"
                                       Margin="0,0,5,0" />
                                <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"> Add Recording File</TextBlock>
                            </Grid>
                        </Button>

                    </Grid>
                </Border>-->

                <StackPanel Grid.Row="3"
                            Orientation="Horizontal">

                    <Button Foreground="#E0EAFA"
                            Background="{StaticResource AccentColor.Primary}"
                            Template="{StaticResource Template.Button.Submit}"
                            Command="{Binding SaveCommand}">Proceed</Button>
                    <Button Command="{Binding ResetCommand}">Reset</Button>

                </StackPanel>

                <Button x:Name="closeButton"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        Foreground="Maroon"
                        Height="30"
                        Width="30"
                        Margin="15,0"
                        Padding="0"
                        Template="{StaticResource Template.Button.Close}"
                        Command="{Binding CloseCommand}">✖</Button>

            </Grid>

        </Grid>

    </Grid>

</UserControl>
