<UserControl x:Class="ECR.View.Views.UserControls.RecordsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ECR.View.Views.UserControls"
             xmlns:ph="clr-namespace:PlaceholderTextBox;assembly=PlaceholderTextBox"
             xmlns:vm="clr-namespace:ECR.View.ViewModels"
             xmlns:converter="clr-namespace:ECR.WPF.Utilities.Converters"
             mc:Ignorable="d"
             FocusManager.FocusedElement="{Binding ElementName=firstControl}"
             d:DataContext="{d:DesignInstance Type=vm:AddRecordForm_ViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="784.5"
             d:DesignWidth="1080">
    <UserControl.Resources>
        <Thickness x:Key="Vertical.Spacing">0,0,0,20</Thickness>

        <Style TargetType="Button">
            <Setter Property="Template"
                    Value="{StaticResource Template.Round.Button}" />
            <Setter Property="Width"
                    Value="140" />
            <Setter Property="Height"
                    Value="35" />
            <Setter Property="Margin"
                    Value="0,0,10,0" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>
    </UserControl.Resources>

    <Grid Background="#cfffffff">

        <Grid Margin="40"
              MaxWidth="800">
            <Border Background="#EFF2F7"
                    BorderThickness="0.5"
                    BorderBrush="Black"
                    CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="0"
                                      Opacity="0.4" />
                </Border.Effect>
            </Border>

            <Grid Margin="25,20,2,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="AUTO" />
                    <RowDefinition />
                    <RowDefinition Height="AUTO" />
                </Grid.RowDefinitions>

                <TextBlock VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold">ADD NEW RECORD</TextBlock>

                <StackPanel Grid.Row="1"
                            Margin="0,10"
                            Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="RadioButton">
                            <Setter Property="Margin"
                                    Value="0,0,0,0" />
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Center" />
                            <Setter Property="Padding"
                                    Value="15,10" />
                            <Setter Property="Width"
                                    Value="150" />
                            <Setter Property="Cursor"
                                    Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="templateRoot">
                                            <Grid>
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  Margin="{TemplateBinding Padding}" />
                                                <Border x:Name="checkIndicator"
                                                        VerticalAlignment="Bottom"
                                                        Height="1"
                                                        Visibility="Hidden"
                                                        Background="{StaticResource AccentColor.Primary}" />
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked"
                                                     Value="True">
                                                <Setter Property="Visibility"
                                                        TargetName="checkIndicator"
                                                        Value="Visible" />
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource AccentColor.Primary}" />
                                                <Setter Property="FontWeight"
                                                        Value="Bold" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>
                    <RadioButton x:Name="detailsRB">Details</RadioButton>
                    <RadioButton x:Name="audioRB"
                                 IsChecked="True">
                        <TextBlock>                            
                            <Run> Audio Clips </Run>
                            <Run FontWeight="Regular">[</Run>
                            <Run FontWeight="Regular"
                                 Foreground="Black"
                                 Text="{Binding Audios.Count, Mode=OneWay}" />
                            <Run FontWeight="Regular">]</Run>
                        </TextBlock>
                    </RadioButton>
                </StackPanel>

                <ScrollViewer Grid.Row="2"
                              Margin="0,10"
                              Padding="0,0,5,0"
                              Visibility="{Binding ElementName=detailsRB, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}"
                              VerticalScrollBarVisibility="Visible"
                              HorizontalScrollBarVisibility="Disabled">

                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin"
                                        Value="5,0,5,5" />
                                <Setter Property="FontSize"
                                        Value="11" />

                                <Setter Property="Foreground"
                                        Value="{StaticResource AccentColor.Primary}" />
                            </Style>
                        </StackPanel.Resources>

                        <TextBlock>Caller Information:</TextBlock>

                        <StackPanel Margin="{StaticResource Vertical.Spacing}">
                            <ph:PlaceholderTextbox x:Name="firstControl"
                                                   Text="{Binding CallerName, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                                                   PlaceholderText="Name..."></ph:PlaceholderTextbox>
                            <ph:PlaceholderTextbox Text="{Binding CallContactDetails, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   PlaceholderText="Contact Details..."></ph:PlaceholderTextbox>
                            <ph:PlaceholderTextbox Margin="0"
                                                   Text="{Binding CallAddresss, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   PlaceholderText="Address(optional)..."></ph:PlaceholderTextbox>
                        </StackPanel>

                        <TextBlock>Call Type:</TextBlock>
                        <ComboBox Margin="{StaticResource Vertical.Spacing}"
                                  Text="{Binding EndorseTo,UpdateSourceTrigger=PropertyChanged}"
                                  Background="White"
                                  IsEditable="True">
                            <ComboBoxItem>Emergency</ComboBoxItem>
                            <ComboBoxItem>Prank</ComboBoxItem>
                            <ComboBoxItem>Wrong Number</ComboBoxItem>
                        </ComboBox>

                        <TextBlock>Endorse To:</TextBlock>

                        <ComboBox Margin="{StaticResource Vertical.Spacing}"
                                  Text="{Binding EndorseTo,UpdateSourceTrigger=PropertyChanged}"
                                  Background="White"
                                  IsEditable="True">
                            <ComboBoxItem>BFP Kalibo FireStation</ComboBoxItem>
                            <ComboBoxItem>BFP Kalibo FireStation I</ComboBoxItem>
                            <ComboBoxItem>BFP Kalibo FireStation II</ComboBoxItem>
                            <ComboBoxItem>BFP Kalibo FireStation III</ComboBoxItem>
                            <ComboBoxItem>BFP Kalibo FireStation IV</ComboBoxItem>
                        </ComboBox>
                        <Grid Margin="{StaticResource Vertical.Spacing}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0">Location:</TextBlock>
                            <ph:PlaceholderTextbox Grid.Row="1"
                                                   Grid.Column="0"
                                                   Margin="0"
                                                   Text="{Binding Severity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Grid.Column="2">Priority Level:</TextBlock>

                            <Border Grid.Row="1"
                                    Grid.Column="2"
                                    BorderBrush="{StaticResource AccentColor.Primary}"
                                    Background="White"
                                    VerticalAlignment="Top"
                                    CornerRadius="3,3,0,0"
                                    Padding="10.5"
                                    BorderThickness="0,0,0,1">

                                <UniformGrid Columns="6"
                                             VerticalAlignment="Center">
                                    <UniformGrid.Resources>
                                        <Style TargetType="RadioButton">
                                            <Setter Property="HorizontalAlignment"
                                                    Value="Center" />

                                            <Setter Property="Cursor"
                                                    Value="Hand" />
                                        </Style>

                                    </UniformGrid.Resources>
                                    <RadioButton IsChecked="True">I</RadioButton>
                                    <RadioButton>II</RadioButton>
                                    <RadioButton>III</RadioButton>
                                    <RadioButton>IV</RadioButton>
                                    <RadioButton>V</RadioButton>
                                    <RadioButton Margin="0">VI</RadioButton>

                                </UniformGrid>
                            </Border>
                        </Grid>

                        <TextBlock>Summary:</TextBlock>
                        <ph:PlaceholderTextbox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                               Margin="{StaticResource Vertical.Spacing}" />

                        <TextBlock>Details of the Report:</TextBlock>
                        <ph:PlaceholderTextbox AcceptsReturn="True"
                                               TextWrapping="Wrap"
                                               MinHeight="270"
                                               Margin="0"
                                               BorderBrush="{StaticResource AccentColor.Primary}"
                                               Text="{Binding Details,UpdateSourceTrigger=PropertyChanged}" />

                    </StackPanel>
                </ScrollViewer>

                <Grid Grid.Row="2"
                      Margin="0,0,10,10"
                      Visibility="{Binding ElementName=audioRB,Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>

                                <ResourceDictionary Source="/Views/ResourceDictionaries/DataGridResource.xaml" />
                            </ResourceDictionary.MergedDictionaries>

                            <converter:SecondsToHoursMinutesSeconds x:Key="secondsConverter" />

                        </ResourceDictionary>
                    </Grid.Resources>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition   Width="20" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <!--<Slider VerticalAlignment="Bottom"></Slider>
                        <Border Background="White"
                                CornerRadius="4"
                                Padding="10"
                                Height="auto">
                            <UniformGrid Columns="6">
                                <UniformGrid.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="Width"
                                                Value="30" />
                                        <Setter Property="Height"
                                                Value="30" />
                                        <Setter Property="Margin"
                                                Value="2,0" />

                                    </Style>
                                </UniformGrid.Resources>
                                <Button></Button>
                                <Button></Button>
                                <Button></Button>
                                <Button></Button>
                                <Button></Button>
                                <Button></Button>
                            </UniformGrid>
                        </Border>-->

                        <Button Grid.Column="2"
                                BorderThickness="0"
                                Background="{StaticResource AccentColor.Primary}"
                                Foreground="white"
                                VerticalAlignment="Stretch"
                                Width="auto"
                                Padding="10,0"
                                Margin="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="15"
                                       Source="/Images/audio_wave_50px.png" />

                                <TextBlock Grid.Column="2"
                                           VerticalAlignment="Center">
                                     Add Recording
                                </TextBlock>
                            </Grid>
                        </Button>
                    </Grid>

                    <Rectangle Grid.Row="1"
                               Fill="Gray"
                               VerticalAlignment="Center"
                               Margin="0,10"
                               Height="0.5" />
                    <DataGrid ItemsSource="{Binding Audios}"
                              Grid.Row="2"
                              Margin="0,0,0,0"
                              Style="{StaticResource DataGridStyle1}"
                              RowStyle="{StaticResource DataGridRowStyle1}"
                              CellStyle="{StaticResource DataGridCellStyle1}"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle1}">
                        <DataGrid.Columns>

                            <DataGridTextColumn Header="● Audio Name"
                                                IsReadOnly="True"
                                                Binding="{Binding Name, Mode=OneWay, StringFormat={}♪ {0}}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}"
                                           BasedOn="{StaticResource {x:Type TextBlock}}">
                                        <Setter Property="TextTrimming"
                                                Value="CharacterEllipsis" />
                                        <Setter Property="ToolTip"
                                                Value="{Binding Name, Mode=OneWay}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="● Duration"
                                                IsReadOnly="True"
                                                Binding="{Binding Duration, Mode=OneWay,Converter={StaticResource secondsConverter}, StringFormat={}⏱︎ {0}}" />
                            <DataGridTextColumn Header="● Date/Time Recorded"
                                                CanUserResize="False"
                                                IsReadOnly="True"
                                                Binding="{Binding DateTimeRecorded, Mode=OneWay,StringFormat={}📅 {0}}" />
                            <DataGridTemplateColumn Header=""
                                                    IsReadOnly="True"
                                                    Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0"
                                                    HorizontalAlignment="Right"
                                                    Width="auto">
                                            <StackPanel.Resources>
                                                <Style TargetType="Image">
                                                    <Setter Property="Width"
                                                            Value="15" />
                                                </Style>
                                            </StackPanel.Resources>

                                            <Button Style="{StaticResource gridEditButton}">
                                                <Image Source="/Images/GridButtons/Play Button Circled_50px.png" />
                                                <!--<Icon:PackIconMaterial Kind="PencilOutline"
                                           Style="{StaticResource gridButtonIcon}" />-->
                                            </Button>
                                            <Button Margin="5 0 0 0"
                                                    Style="{StaticResource gridRemoveButton}">
                                                <Image Source="/Images/GridButtons/minus_20px.png" />
                                                <!--<Icon:PackIconMaterial Kind="DeleteOutline"
                                           Style="{StaticResource gridButtonIcon}" />-->
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>

                </Grid>
                <!--<Border Background="#E0EAFA"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="10"
                        Margin="0,10,20,10"
                        Grid.Row="2">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="{StaticResource AccentColor.Primary}"
                                   VerticalAlignment="Center">*No Recording Selected</TextBlock>

                        <Button Margin="0"
                                Background="Transparent"
                                Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Image Source="/Images/Audio Wave_50px.png"
                                       Width="15"
                                       Margin="0,0,5,0" />
                                <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"> Add Recording File</TextBlock>
                            </Grid>
                        </Button>

                    </Grid>
                </Border>-->

                <StackPanel Grid.Row="3"
                            Orientation="Horizontal">

                    <Button Foreground="#E0EAFA"
                            Background="{StaticResource AccentColor.Primary}"
                            BorderThickness="1"
                            BorderBrush="Black"
                            Template="{StaticResource Template.Button.Submit}"
                            Command="{Binding SaveCommand}">Save</Button>
                    <Button BorderThickness="1"
                            BorderBrush="Black"
                            Command="{Binding ResetCommand}">Reset</Button>

                </StackPanel>

                <Button x:Name="closeButton"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        Foreground="Maroon"
                        Height="30"
                        Width="30"
                        Margin="15,0"
                        Padding="0"
                        Template="{StaticResource Template.Button.Close}"
                        Command="{Binding CloseCommand}">✖</Button>

            </Grid>

        </Grid>

    </Grid>

</UserControl>
